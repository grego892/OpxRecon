@page "/"


<PageTitle>Audionix</PageTitle>


<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper class="d-flex flex-row pt-6 pb-4" style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.CellTower" Color="Color.Primary" class="mx-4" style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" class="mud-text-secondary mb-n1">Stations:</MudText>
                <MudText Typo="Typo.h5">@stations.Count</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper class="d-flex flex-row pt-6 pb-4" style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.DirectionsRun" Color="Color.Secondary" class="mx-4" style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" class="mud-text-secondary mb-n1">Next Run:</MudText>
                <MudText Typo="Typo.subtitle1" class="mud-text-secondary mb-n1">5:15 am</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper class="d-flex flex-row pt-6 pb-4" style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" class="mx-4" style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" class="mud-text-secondary mb-n1">Current Log Errors</MudText>
                <MudText Typo="Typo.h5">0</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper class="d-flex flex-row pt-6 pb-4" style="height:100px;">
            <MudIcon Icon="@Icons.Custom.Uncategorized.Radioactive" Color="Color.Warning" class="mx-4" style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" class="mud-text-secondary mb-n1">Potential Station Problems</MudText>
                <MudText Typo="Typo.h5">0</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="8">
        <MudPaper Class="pa-3">
            <MudText Typo="Typo.subtitle1" class="mud-text-secondary mb-n1">Stations:</MudText>
            @foreach (var station in stations)
            {
                    <MudText Typo="Typo.h6">@station.CallLetters</MudText>
                }
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudPaper class="pa-4" style="height:300px;">
Future Use:
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="6">
            <MudCard style="height:100%;">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Users Report</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent class="px-0">
                    <MudSimpleTable Elevation="0" Hover="true">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email Address</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var recipient in recipients)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex flex-row">
                                            <div class="ml-6">
                                            <MudText Typo="Typo.subtitle2">@recipient.Name</MudText>
                                            <MudText Typo="Typo.body2">@recipient.EmailAddress</MudText>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </MudSimpleTable>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="12" md="6">
            <MudCard style="height:100%;">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Future Use:</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent class="px-0">

                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
